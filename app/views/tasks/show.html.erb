<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to "Update", edit_task_path(@task)  %>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<%= link_to "Create", new_task_path  %>

<p> If you want to get back to the task list press <%= link_to "HERE", tasks_path  %>